<%= nested_form_for @quote do |quote_form| %>
	<%= quote_form.label :name %>
	<%= quote_form.text_field :name %> <br />
	
	<%= quote_form.fields_for :quote_lines do |quote_line_fields| %>
		
		
				<%= quote_line_fields.fields_for :item do |item_fields| %>
			
				<%= item_fields.text_field :description %>
			<% end %>
		
			<%= quote_line_fields.text_field :quantity %>
		
			<%= quote_line_fields.link_to_remove "Remove Quote Line" %>
		</tr>
				
	
	<% end %>
		
	<%= quote_form.link_to_add "Add Quote Line", :quote_lines %>
	<%= quote_form.submit%>
<% end %>